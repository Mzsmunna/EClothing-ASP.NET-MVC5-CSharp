
@{
    ViewBag.Title = "Index";
}

@section Style {
    <!-- Bootstrap core CSS-->
    <!-- Custom styles for this template-->
    @*<link href="asset('custom_public/css/sb-admin.css')" rel="stylesheet">*@
    @Styles.Render("~/Content/custom_content/css/sb-admin.css")
}

<div class="container">
    <div class="card card-login mx-auto mt-5 pt-md-2">
        <div class="card-header"><strong>Login</strong></div>
        <div class="card-body">
            <form method="post" action="/Login/Index2" id="login">
                <div class="form-group">
                    <label for="usernameEmail">Username / Email address</label>
                    <input class="form-control" id="usernameEmail" type="text" aria-describedby="emailHelp" placeholder="Enter username / email" name="usernameEmail" value="">
                    @if (Session["username_empty"] != null)
                    {
                        <small id="userDNE" class="text-danger"><strong>@Session["username_empty"]</strong></small>
                    }
                    <small id="usernameEmailHelp" class="text-danger"></small>
                </div>
                <input class="btn btn-primary btn-block" type="submit" value="Next" />
                <!--<a class="btn btn-primary btn-block" href="index.html">Login</a>-->
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="/register">Register an Account</a>
                <a class="d-block small" href="/Forget">Forgot Username?</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap core JavaScript-->
    <!-- Core plugin JavaScript-->
    @Scripts.Render("~/Scripts/custom_scripts/vendor/jquery-easing/jquery.easing.min.js")
    @* <script src="asset('custom_public/vendor/jquery-easing/jquery.easing.min.js')"></script> *@

    <!-- Custom plugin JavaScript-->
    @Scripts.Render("~/Scripts/custom_scripts/login-validate.js")
    @* <script src="asset('custom_public/login-validate.js')"></script> *@

    @if (TempData["usrerr_msg"] != null)
    {
        <script type="text/javascript">
              alert( "@(TempData["usrerr_msg"])");
        </script>
    }

    @if (TempData["pwderr_msg"] != null)
    {
        if (TempData["pwderr_msg"].ToString() != "")
        {
            <script type="text/javascript">
                  alert( "@(TempData["pwderr_msg"])");
            </script>
        }
    }

    @if (TempData["login_req"] != null)
    {
        if (TempData["login_req"].ToString() != "")
        {
            <script type="text/javascript">
                  alert( "@(TempData["login_req"])");
            </script>
        }
    }

    @if (TempData["msg"] != null)
    {
        if (TempData["msg"].ToString() != "")
        {
            <script type="text/javascript">
                  alert( "@(TempData["msg"])");
            </script>
        }
    }

    <script type="text/javascript">

        //alert("login: hello mzs");

        setTimeout(function () {
            $('.mzs-alert-div').fadeOut('slow'); //fast
        }, 5000);
    </script>
}

