
@{
    ViewBag.Title = "Reset";
}

<h2>Reset</h2>

@section Style {
    <!-- Bootstrap core CSS-->
    <!-- Custom styles for this template-->
    @*<link href="asset('custom_public/css/sb-admin.css')" rel="stylesheet">*@
    @Styles.Render("~/Content/custom_content/css/sb-admin.css")
}

<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header"><strong>Reset Password of @Session["usernamef"]</strong></div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>All Set!</h4>
                <p>Now enter new password for your account.... </p>
            </div>
            <form action="/Forget/Confirm" method="post">
                <div class="form-group">
                    <input class="form-control" id="exampleInputEmail1" type="password" aria-describedby="usernameHelp" name="passwordf" placeholder="Enter new Password">
                </div>
                <div class="form-group">
                    <input class="form-control" id="exampleInputEmail1" type="password" aria-describedby="emailHelp" name="cpasswordf" placeholder="Retype Password">
                </div>
                <input class="btn btn-primary btn-block" type="submit" value="Confirm Change" />
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="/Register">Register an Account</a>
                <a class="d-block small" href="/Login">Login Page</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap core JavaScript-->
    <!-- Core plugin JavaScript-->
    @Scripts.Render("~/Scripts/custom_scripts/vendor/jquery-easing/jquery.easing.min.js")
    @* <script src="asset('custom_public/vendor/jquery-easing/jquery.easing.min.js')"></script> *@

    @if (TempData["frgt_err"] != null)
    {
        if (TempData["frgt_err"].ToString() != "")
        {
            <script type="text/javascript">
                  alert( "@(TempData["frgt_err"])");
            </script>
        }
    }

    @if (TempData["msg"] != null)
    {
        if (TempData["msg"].ToString() != "")
        {
            <script type="text/javascript">
                  alert( "@(TempData["msg"])");
            </script>
        }
    }

    <script type="text/javascript">

        //alert("Forget Reset: hello mzs");

        setTimeout(function () {
            $('.mzs-alert-div').fadeOut('slow'); //fast
        }, 5000);
    </script>
}